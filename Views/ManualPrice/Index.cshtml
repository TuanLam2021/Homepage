@model IEnumerable<Homepage.Models.SACH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_homepageLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID_SACH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TEN_SACH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GIA_BIA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GIA_BAN)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    @using (Html.BeginForm("UpdatePrice", "ManualPrice", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <td>
            @Html.DisplayFor(modelItem => item.ID_SACH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TEN_SACH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GIA_BIA)
        </td>

        <td>
            @Html.TextBoxFor(modelItem => item.GIA_BAN)
        </td>
        <td>
            <input type="submit" value="Update" />
        </td>
    }
</tr>
}

</table>
